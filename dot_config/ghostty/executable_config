# 设置字体和大小
# font-family = SpaceMono Nerd Font
font-family = Maple Mono  Normal NF CN
font-size = 16
# 鼠标和剪贴板
# 在键入时立即隐藏鼠标
mouse-hide-while-typing = true
# 窗口和界面
# 设置新窗口和标签是否继承之前窗口的工作目录
window-inherit-working-directory = true
window-subtitle = false
# 设置是否与屏幕刷新率同步渲染
window-vsync = true

# 设置是否启用保存和恢复窗口状态。有效值为default， never和always
window-save-state = "always"

# 设置窗口的主题。有效值为 auto, system, light, dark, 和 ghostty
window-theme = "dark"

